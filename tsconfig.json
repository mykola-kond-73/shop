{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx" : "react-jsx" , 
    "target" : "es2015" , 
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir":"./dist/",
    "baseUrl": "./",
    "removeComments": true,

  },
        
  "include": [
    "src/**/*"
  ],
  "exclude":[
    "node_modules",
    "**/*.test.ts",
    "src/test"
  ]
}
